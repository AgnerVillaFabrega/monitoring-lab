{
  "dashboard": {
    "id": null,
    "title": "Applications Monitoring",
    "tags": ["monitoring", "apps"],
    "timezone": "browser",
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "HTTP Requests Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m]))",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "App1 Business Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "app1_business_metric",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "App2 Business Metrics",
        "type": "graph", 
        "targets": [
          {
            "expr": "app2_business_metric",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Error Rates",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(app1_errors_total[5m])",
            "refId": "A",
            "legendFormat": "App1 errors"
          },
          {
            "expr": "rate(app2_errors_total[5m])",
            "refId": "B", 
            "legendFormat": "App2 errors"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      }
    ]
  }
}